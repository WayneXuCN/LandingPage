{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@components/*": ["src/components/*"],
            "@components/ui/*": ["src/components/ui/*"],
            "@components/react/*": ["src/components/react/*"],
            "@layouts/*": ["src/layouts/*"],
            "@lib/*": ["src/lib/*"],
            "@locales/*": ["src/locales/*"],
            "@styles/*": ["src/styles/*"],
            "@data/*": ["src/data/*"]
        }
    },
    "include": ["src/**/*", "astro.config.mjs"],
    "exclude": ["node_modules", "dist"]
}
