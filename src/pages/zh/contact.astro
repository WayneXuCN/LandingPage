---
/**
 * /zh/contact - 中文联系页
 */
import BaseLayout from '../../layouts/BaseLayout.astro';
import HeaderBar from '../../components/astro/HeaderBar.jsx';
import Contact from '../../components/astro/Contact.jsx';
import Footer from '../../components/astro/Footer.jsx';
import UnderlineEffects from '../../components/astro/UnderlineEffects.jsx';
import { getLocaleDataSync } from '../../locales/config.js';

// 当前语言
const lang = 'zh';

// 从统一配置获取 locale 数据
const translations = getLocaleDataSync(lang);
const { site, nav, header, contact, footer } = translations;

// 当前路径用于导航高亮
const currentPath = Astro.url.pathname;
---

<BaseLayout 
  title={`联系 | ${site.title}`}
  description={site.description}
  author={site.author}
  keywords={site.keywords}
  lang={lang}
>
  <HeaderBar 
    nav={nav} 
    header={header} 
    currentPath={currentPath}
    lang={lang}
    client:load 
  />
  
  <Contact 
    content={{ contact }} 
    client:load 
  />
  
  <Footer footer={footer} client:load />
  
  <UnderlineEffects client:load />
</BaseLayout>
