---
/**
 * /[lang]/about.astro
 */
import BaseLayout from '@layouts/BaseLayout.astro';
import Hero from '@components/ui/Hero.astro';
import Footer from '@components/ui/Footer.astro';
import HeaderBar from '@components/ui/HeaderBar.astro';
import { getI18n, locales, type Locale } from '@lib/i18n';
import { resolveContentHref } from '@lib/utils';

// 生成静态路径
export function getStaticPaths() {
  return locales.map(lang => ({
    params: { lang },
  }));
}

// 获取当前语言
const { lang } = Astro.params as { lang: Locale };

// 从内容集合获取翻译数据
const translations = await getI18n(lang);
const { site, nav, header, about, footer } = translations;
const { hero, timeline, values, philosophy } = about;

// 当前路径用于导航高亮
const currentPath = Astro.url.pathname;
---

<BaseLayout
  title={`About | ${site.title}`}
  description={site.description}
  author={site.author}
  keywords={site.keywords}
  lang={lang}
>
  <HeaderBar nav={nav} header={header} currentPath={currentPath} lang={lang} />

  {/* Hero 区块 */}
  <Hero subtitle={hero.subtitle} title={hero.title} description={hero.description} />

  {/* Timeline 区块 */}
  <section class='mb-12 sm:mb-16 md:mb-20'>
    <div class='flex items-center justify-between mb-8'>
      <div>
        <p class='text-sm uppercase tracking-[0.3em] text-gray-500 dark:text-gray-400'>
          {timeline.subtitle}
        </p>
        <h3 class='text-3xl font-semibold display-font'>{timeline.title}</h3>
      </div>
      <span class='text-gray-400 dark:text-gray-500 text-sm'>{timeline.period}</span>
    </div>
    <div class='space-y-6'>
      {
        timeline.items.map((item: { period: string; title: string; description: string }) => (
          <article class='p-6 rounded-2xl border border-gray-200 dark:border-gray-700 card-hover'>
            <p class='text-xs text-gray-400 dark:text-gray-500 uppercase tracking-[0.35em] mb-2'>
              {item.period}
            </p>
            <h4 class='text-2xl font-semibold mb-3'>{item.title}</h4>
            <p class='text-gray-600 dark:text-gray-300'>{item.description}</p>
          </article>
        ))
      }
    </div>
  </section>

  {/* Values 区块 */}
  <section class='mb-12 sm:mb-16 md:mb-20'>
    <div class='grid md:grid-cols-2 gap-10'>
      <div class='text-center md:text-left'>
        <p class='text-sm uppercase tracking-[0.3em] text-gray-500 dark:text-gray-400 mb-3'>
          {values.subtitle}
        </p>
        <h3 class='text-3xl font-semibold display-font mb-6'>{values.title}</h3>
        <ul class='space-y-6 text-gray-700 dark:text-gray-300 leading-relaxed'>
          {
            values.items.map((item: { label: string; text: string }) => (
              <li class='flex flex-col items-center md:block'>
                <span class='font-semibold text-gray-900 dark:text-gray-100 md:mr-2 mb-1 md:mb-0'>
                  {item.label}：
                </span>
                <span>{item.text}</span>
              </li>
            ))
          }
        </ul>
      </div>
      <div
        class='bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-3xl p-8 card-hover'
      >
        <p class='text-sm text-pink-500 dark:text-pink-400 font-semibold tracking-[0.35em] mb-4'>
          {values.product.subtitle}
        </p>
        <h4 class='text-2xl font-semibold mb-3'>{values.product.title}</h4>
        <p class='text-gray-600 dark:text-gray-300'>{values.product.description}</p>
        <a
          href={resolveContentHref(values.product.linkUrl, lang)}
          class='inline-flex items-center text-pink-500 dark:text-pink-400 font-medium underline mt-4'
        >
          {values.product.linkText}
          <svg
            class='ml-2 w-4 h-4'
            viewBox='0 0 24 24'
            fill='none'
            stroke='currentColor'
            stroke-width='2'
            stroke-linecap='round'
            stroke-linejoin='round'
            aria-hidden='true'
          >
            <path d='M5 12h14' />
            <path d='M13 5l7 7-7 7' />
          </svg>
        </a>
      </div>
    </div>
  </section>

  {/* Philosophy 区块 */}
  <section class='mb-12 sm:mb-16 md:mb-20'>
    <div class='bg-black dark:bg-gray-800 text-white rounded-3xl p-10 md:p-14 card-hover'>
      <p class='uppercase text-sm tracking-[0.4em] text-gray-300 dark:text-gray-400 mb-4'>
        {philosophy.subtitle}
      </p>
      <h3 class='display-font text-4xl font-semibold mb-6'>{philosophy.title}</h3>
      <p class='text-lg text-gray-200 dark:text-gray-300 mb-8'>{philosophy.description}</p>
      <a
        href={resolveContentHref(philosophy.ctaUrl, lang)}
        class='inline-flex items-center text-black bg-white dark:text-white dark:bg-gray-700 px-5 py-3 rounded-full font-semibold'
      >
        {philosophy.ctaText}
        <svg
          class='ml-3 w-4 h-4'
          viewBox='0 0 24 24'
          fill='none'
          stroke='currentColor'
          stroke-width='2'
          stroke-linecap='round'
          stroke-linejoin='round'
          aria-hidden='true'
        >
          <path d='M5 12h14' />
          <path d='M13 5l7 7-7 7' />
        </svg>
      </a>
    </div>
  </section>

  <Footer footer={footer} />

</BaseLayout>
